# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /               controllers.Application.index

# Shop Resource
POST   /shops          app.controllers.ShopController.create
GET    /shops          app.controllers.ShopController.find(page: Int ?= 1, perPage: Int ?= 20)

# Product Resource
POST   /products       app.controllers.ProductController.create
GET    /products       app.controllers.ProductController.find(page: Int ?= 1, perPage: Int ?= 20)

# Price Resource
POST   /found_prices       app.controllers.PriceController.create
GET    /found_prices       app.controllers.PriceController.find(page: Int ?= 1, perPage: Int ?= 20)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file   controllers.Assets.versioned(path="/public", file: Asset)
